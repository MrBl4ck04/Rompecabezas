<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Rompe_CarvajalFranz" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/purple_600</item>
        <item name="colorPrimaryContainer">@color/purple_800</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryContainer">@color/accent_light</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:statusBarColor">@color/purple_900</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Elevated button style -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialCardViewStyle">@style/Widget.App.Card</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">8dp</item>
        <item name="android:insetRight">8dp</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_purple_background</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.App.Button.Accent" parent="Widget.App.Button">
        <item name="android:background">@drawable/button_accent_background</item>
    </style>

    <style name="Widget.App.Button.Red" parent="Widget.App.Button">
        <item name="android:background">@drawable/button_red_background</item>
    </style>

    <style name="Widget.App.Button.Orange" parent="Widget.App.Button">
        <item name="android:background">@drawable/button_orange_background</item>
    </style>

    <style name="Widget.App.Button.Green" parent="Widget.App.Button">
        <item name="android:background">@drawable/button_green_background</item>
    </style>

    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <style name="Theme.Rompe_CarvajalFranz" parent="Base.Theme.Rompe_CarvajalFranz" />
</resources>